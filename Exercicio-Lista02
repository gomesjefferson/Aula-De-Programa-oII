package exercicio02;

import java.util.Scanner;

public class ExercicioNumber03 {
    public static void main(String[] args){
    Scanner sc = new Scanner(System.in);
    int numero;
    
    System.out.println("Digite um Número: ");
    numero = Integer.parseInt(sc.nextLine());
    
    if(numero > 0){
        System.out.println("O número digitado é: " + numero + "\n"
                + " Logo o Número é Positivo");
    }
    else if(numero < 0){
        System.out.println("O número digitado é: " + numero + "\n"
                + " Logo o Número é Negativo");        
    }else if(numero == 0){
    System.out.println("O número digitado é: " + numero + "\n"
                + " Logo o Número é NULLO");
    }
}
